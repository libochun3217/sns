    <style name="CampaignUserTextValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#999999</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"></style>

    <!-- 通知中心字符串样式 -->
    <style name="NotifyItemSpanName">
        <item name="android:textSize">@dimen/notify_item_text_name_size</item>
        <item name="android:textColor">@color/notify_item_text_name</item>
    </style>

    <style name="NotifyItemSpanLikeString">
        <item name="android:textSize">@dimen/notify_item_text_comment_size</item>
        <item name="android:textColor">@color/notify_item_text_comment</item>
