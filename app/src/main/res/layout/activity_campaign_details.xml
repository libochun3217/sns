<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SimpleMessageListActivity">

    <com.charlee.sns.view.TopBarLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_layout_height"
        android:layout_alignParentTop="true"
        app:left="back"
        app:leftText="@string/back"/>

    <com.charlee.sns.view.CampaignView
        android:id="@+id/view_campaign_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar">

    </com.charlee.sns.view.CampaignView>

    <com.charlee.sns.view.EmptyPlaceholderView
        android:id="@+id/empty_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:visibility="gone"/>

</RelativeLayout>