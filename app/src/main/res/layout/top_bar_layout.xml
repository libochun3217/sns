<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/topur_layout"
  android:layout_width="fill_parent"
  android:layout_height="@dimen/top_layout_height"
  android:layout_gravity="top">

  <LinearLayout
    android:id="@+id/top_left_view_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginStart="11dp"
    android:layout_marginLeft="11dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:orientation="horizontal">
  </LinearLayout>

  <LinearLayout
    android:id="@+id/top_right_view_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginRight="11dp"
    android:layout_marginEnd="11dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:orientation="horizontal">
  </LinearLayout>

  <RelativeLayout
    android:id="@+id/top_title_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="85dp"
    android:layout_marginRight="85dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/top_btn_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:ellipsize="middle"
      android:gravity="center"
      android:maxWidth="150dp"
      android:singleLine="true"/>
  </RelativeLayout>

  <View
    android:id="@+id/bottom_separator"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_alignParentBottom="true"
    android:background="@color/top_bar_bottom_separator_color"/>
</RelativeLayout>