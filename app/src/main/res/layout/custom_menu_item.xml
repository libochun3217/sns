<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="@dimen/custom_menu_margin_left_right"
              android:layout_marginRight="@dimen/custom_menu_margin_left_right"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:id="@+id/space_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_menu_interval_space_height"
        android:background="@color/separator_color"
        android:visibility="gone"/>

    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_menu_divider_height"
        android:layout_marginLeft="@dimen/custom_menu_divider_margin_left_right"
        android:layout_marginRight="@dimen/custom_menu_divider_margin_left_right"
        android:background="@color/comment_divider_line_color"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/txt_menu_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_menu_text_height"
        android:background="@drawable/selector_custom_menu_text_bg"
        android:gravity="center"
        android:text="@string/test_string"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="@dimen/custom_menu_text_size"
        />


    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_menu_divider_height"
        android:layout_marginLeft="@dimen/custom_menu_divider_margin_left_right"
        android:layout_marginRight="@dimen/custom_menu_divider_margin_left_right"
        android:background="@color/comment_divider_line_color"
        android:visibility="gone"/>

    <View
        android:id="@+id/space_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_menu_interval_space_height"
        android:background="@color/separator_color"
        android:visibility="gone"/>
</LinearLayout>