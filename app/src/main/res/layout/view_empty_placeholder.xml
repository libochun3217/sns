<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sns_bg_gray"
                android:orientation="vertical">

    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/empty_holder_txt_margin_bottom"
        android:layout_marginLeft="@dimen/empty_holder_txt_margin_left"
        android:layout_marginRight="@dimen/empty_holder_txt_margin_right"
        android:layout_marginTop="@dimen/empty_holder_txt_margin_top"
        android:gravity="center"
        android:text="@string/test_string"
        android:textColor="@color/sns_gray"
        android:textSize="@dimen/empty_holder_btn_txt_size"
        />

    <ImageView
        android:id="@+id/image_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_hint"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/empty_holder_btn_height"
        android:layout_below="@id/txt_hint"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_button_to_follow_action"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/btn_action_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/retry"
            android:visibility="gone"
            android:paddingRight="@dimen/empty_holder_btn_icon_padding_right"
            />

        <TextView
            android:id="@+id/btn_action_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/max_item_spacing"
            android:layout_marginRight="@dimen/max_item_spacing"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/test_string"
            android:textColor="@color/button_retry_text_color"
            android:textSize="@dimen/empty_holder_btn_txt_size"/>
    </LinearLayout>

</RelativeLayout>