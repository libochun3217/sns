<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_participate_campaign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_layout_height"
            android:visibility="visible">

            <TextView
                android:id="@+id/top_btn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/follow_title"
                android:textColor="@color/top_bar_text_color"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/btn_switch"
                style="@style/SnsButtonStyle.Follow"
                android:layout_width="@dimen/find_friend_btn_width"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/content_margin"
                android:background="@drawable/selector_button_to_follow"
                android:src="@drawable/selector_ic_find_friend"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/min_separator_height"
            android:background="@color/light_separator_color"/>
    </LinearLayout>

</FrameLayout>

