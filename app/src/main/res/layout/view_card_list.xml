<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.charlee.sns.widget.SwipeRefreshLayoutEx
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:swipe_direction="both">

        <com.charlee.sns.widget.VideoPlayerRecyclerView
            android:id="@+id/message_list"
            style="@style/FullMessageRecyclerView"
            app:vl_spacingHorizontal="0dp"/>

    </com.charlee.sns.widget.SwipeRefreshLayoutEx>

    <com.charlee.sns.view.EmptyPlaceholderView
        android:id="@+id/empty_placeholder_full_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</FrameLayout>